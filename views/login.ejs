<%- include("partials/html-head") %>
<%- include("partials/html-navbar") %>
<div class="min-h-screen flex items-center justify-center bg-base-200 px-4">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-center text-2xl font-bold mb-6">管理者登入</h2>
      <form name="form1" onsubmit="sendData(event)" novalidate>
        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text">電子郵箱</span>
          </label>
          <input 
            type="text" 
            class="input input-bordered w-full" 
            id="email" 
            name="email"
            placeholder="請輸入電子郵箱"
          />
        </div>
        <div class="form-control mb-6">
          <label class="label">
            <span class="label-text">密碼</span>
          </label>
          <input
            type="password"
            class="input input-bordered w-full"
            id="password"
            name="password"
            placeholder="請輸入密碼"
          />
        </div>
        <div class="form-control">
          <button type="submit" class="btn btn-primary w-full">登入</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("partials/html-scripts") %>
<script>
  const sendData = (e) => {
    e.preventDefault();
    const fd = new FormData(document.form1);
    fetch("/login", {
      method: "POST",
      body: fd,
    })
      .then((r) => r.json())
      .then((obj) => {
        console.log(obj);
        if (obj.success) {
          location.href = document.referrer || "/";
        } else {
          alert("帳號或密碼錯誤");
        }
      })
      .catch(console.warn);
  };
</script>

